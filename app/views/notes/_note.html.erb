<div class="col-3">
  <div class="note-card <%= dark_class? %>">
    <%= turbo_frame_tag "edit_note" do %>
      <%= link_to edit_note_path(note) do %>
        <p><%= note.content %></p>
      <% end %>
    <% end %>
    <%= link_to note_path(note), method: :delete do %>
      <span><i class="fas fa-times"></i></span>
    <% end %>
  </div>
</div>

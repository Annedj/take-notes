<div class="container">
  <%= turbo_frame_tag 'notes' do %>
    <% if @notes.empty? %>
      <p class='text-center'>You don't have any notes yet. Go ahead and add your first one!</p>
    <% end %>
    <div class="row" data-target="note.list" data-controller="drag-and-drop" data-drag-url="/positions/:id/move">
      <% @notes.each do |note| %>
        <%= render 'note', note: note %>
      <% end %>
      <div class="col-3">
        <div class="new-note-card">
          <%= turbo_frame_tag "new_note", src: new_note_path(@note), target: '_top' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
